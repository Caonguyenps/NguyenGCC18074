@model IEnumerable<webtest.Models.Trainer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped" id="table1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.trainer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trainer_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.external_or_internal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.day_of_birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accout_id)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.trainer_id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.trainer_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.external_or_internal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.day_of_birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accout_id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.trainer_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.trainer_id }, new { onclick = "return confirm('Are you sure you wish to delete this trainer?');" })
            </td>
        </tr>
        }
    </tbody>
</table>